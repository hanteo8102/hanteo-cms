{
  "kind": "collectionType",
  "collectionName": "boards",
  "info": {
    "name": "board",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "contents": {
      "type": "richtext",
      "required": true
    },
    "writer": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "boards"
    },
    "view_count": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "is_delete": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "category": {
      "via": "boards",
      "model": "category"
    },
    "writing_type": {
      "type": "enumeration",
      "enum": [
        "일반 게시물",
        "공지",
        "필독"
      ],
      "default": "normal"
    },
    "color_type": {
      "type": "enumeration",
      "enum": [
        "파랑(#2f6fd4)",
        "빨강(#ff6666)",
        "검정(#333333)"
      ],
      "default": "blue"
    }
  }
}
