{
  "kind": "collectionType",
  "collectionName": "banners",
  "info": {
    "name": "banner",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "company_name": {
      "type": "string",
      "required": true
    },
    "main_banner_text": {
      "type": "text",
      "required": true
    },
    "sub_banner_text": {
      "type": "text"
    },
    "small_banner_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "small_thumbnail_path": {
      "type": "string",
      "required": false
    },
    "big_banner_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "big_thumbnail_path": {
      "type": "string",
      "required": false
    },
    "home_side_banner_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "home_side_thumbnail_path": {
      "type": "string",
      "required": false
    },
    "category_top_banner_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "category_top_thumbnail_path": {
      "type": "string",
      "required": false
    },
    "site_url": {
      "type": "string"
    },
    "contents": {
      "type": "richtext",
      "required": true
    },
    "position": {
      "type": "enumeration",
      "enum": [
        "홈 하단 화면 (카테고리)",
        "홈 상단 화면 (슬라이드)",
        "홈 사이드 화면",
        "카테고리 페이지 상단"
      ],
      "required": true
    },
    "is_public": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "contact_info": {
      "type": "text"
    },
    "priority": {
      "type": "biginteger",
      "default": "0",
      "required": true
    },
    "home_top_priority": {
      "type": "integer",
      "default": "0"
    },
    "home_bottom_priority": {
      "type": "integer",
      "default": "0"
    },
    "home_side_priority": {
      "type": "integer",
      "default": "0"
    },
    "category_top_priority": {
      "type": "integer",
      "default": "0"
    },
    "pdf_file": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "banner_category": {
      "via": "banners",
      "model": "banner-categories"
    },
    "writer": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "home_top": {
      "type": "boolean",
      "default": false
    },
    "home_bottom": {
      "type": "boolean",
      "default": false
    },
    "home_side": {
      "type": "boolean",
      "default": false
    },
    "category_top": {
      "type": "boolean",
      "default": false
    }
  }
}
