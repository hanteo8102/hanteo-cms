{
  "kind": "collectionType",
  "collectionName": "boards",
  "info": {
    "name": "boards",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "contents": {
      "type": "richtext",
      "required": true
    },
    "writer": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "writing_type": {
      "type": "enumeration",
      "enum": [
        "일반 게시물",
        "공지",
        "필독"
      ],
      "default": "normal",
      "required": false
    },
    "color_type": {
      "type": "enumeration",
      "enum": [
        "없음(일반 게시물)",
        "주황(#ff6f1e)",
        "파랑(#2f6fd4)",
        "빨강(#ff6666)",
        "회색(#9a9a9a)",
        "검정(#000000)"
      ],
      "default": "nothing"
    },
    "is_delete": {
      "type": "boolean",
      "default": false
    },
    "category": {
      "model": "category"
    },
    "view_count": {
      "type": "biginteger",
      "default": "0",
      "min": "0"
    }
  }
}
